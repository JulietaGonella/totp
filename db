CREATE DATABASE TOTP;
USE TOTP;

CREATE TABLE totp_secrets (
  email VARCHAR(255),
  appName VARCHAR(255),
  ascii TEXT,
  hex TEXT,
  base32 TEXT,
  otpauth_url TEXT,
  createdAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  updatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
  PRIMARY KEY (email, appName)
);